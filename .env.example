# --- SECURITY SETTINGS ---
# Generate a long random string for production. 
# You can use: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=change_me_in_production_extremely_long_random_string

# Set to False in production. True for development only.
DEBUG=False

# Comma-separated list of allowed hostnames/IPs.
ALLOWED_HOSTS=localhost 127.0.0.1 [::1]

# --- DATABASE SETTINGS ---
# Connection details for the PostgreSQL database container.
# DB_HOST should be 'db' when running with docker-compose, or 'localhost' if running locally.
DB_NAME=presence_db
DB_USER=postgres
DB_PASSWORD=change_me
DB_HOST=db
DB_PORT=5432

# --- INITIAL ADMIN USER ---
# These credentials are used by the 'seed_security' command to create the initial Superuser.
# If these are not set, it defaults to admin@example.com / admin123
SUPERUSER_EMAIL=admin@example.com
SUPERUSER_PASSWORD=change_me_admin
